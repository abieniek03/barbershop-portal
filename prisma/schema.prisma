// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  email          String  @unique
  firstName      String?
  lastName       String?
  hashedPassword String?
  rank           String

  @@map("users")
}

model Visit {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userID  String
  service String
  date    String
  hour    String
  time    Int

  @@map("visits")
}

model Service {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  time  Int
  info  String?

  @@map("services")
}
